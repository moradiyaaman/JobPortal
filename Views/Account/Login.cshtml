@model LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}
<section class="auth-card">
    <div class="auth-card__header">
        <h1>Welcome back</h1>
        <p class="text-muted">Sign in to continue applying for your dream roles.</p>
    </div>
    <form asp-action="Login" method="post" class="form-grid">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

        <div class="form-group">
            <label asp-for="UserNameOrEmail"></label>
            <input asp-for="UserNameOrEmail" class="form-control" autocomplete="username" />
            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-group--inline">
            <label class="checkbox">
                <input asp-for="RememberMe" />
                <span>Remember me</span>
            </label>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Sign in</button>
        <p class="text-center text-muted mt-3">
            Don't have an account? <a asp-action="Register">Create now</a>
        </p>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
