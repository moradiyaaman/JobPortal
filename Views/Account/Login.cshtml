@model LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}
<section class="relative isolate rounded-3xl border border-slate-200 bg-background-light/60 py-12 shadow-inner dark:border-white/10 dark:bg-background-dark/40">
    <div class="mx-auto flex w-full max-w-6xl flex-col gap-10 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-6 border-b border-slate-200/70 pb-6 dark:border-white/10 md:flex-row md:items-center md:justify-between">
            <div class="flex items-center gap-3 text-background-dark dark:text-background-light">
                <div class="h-10 w-10 text-primary">
                    <svg fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
                        <path d="M36.7273 44C33.9891 44 31.6043 39.8386 30.3636 33.69C29.123 39.8386 26.7382 44 24 44C21.2618 44 18.877 39.8386 17.6364 33.69C16.3957 39.8386 14.0109 44 11.2727 44C7.25611 44 4 35.0457 4 24C4 12.9543 7.25611 4 11.2727 4C14.0109 4 16.3957 8.16144 17.6364 14.31C18.877 8.16144 21.2618 4 24 4C26.7382 4 29.123 8.16144 30.3636 14.31C31.6043 8.16144 33.9891 4 36.7273 4C40.7439 4 44 12.9543 44 24C44 35.0457 40.7439 44 36.7273 44Z" fill="currentColor"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary/80">CareerConnect</p>
                    <h1 class="text-2xl font-semibold">Where future-ready teams begin.</h1>
                </div>
            </div>
            <a asp-action="Register" class="inline-flex items-center gap-2 rounded-lg bg-primary/10 px-4 py-2 text-sm font-semibold text-primary hover:bg-primary/20 dark:bg-primary/20 dark:text-background-light">Create an account</a>
        </div>

        <div class="mx-auto w-full max-w-md rounded-xl border border-slate-200/70 bg-white p-10 shadow-xl dark:border-white/10 dark:bg-background-dark/60">
            <div class="space-y-2 text-center">
                <h2 class="text-3xl font-bold tracking-tight text-background-dark dark:text-background-light">Sign in to your account</h2>
                <p class="text-sm text-background-dark/70 dark:text-background-light/70">Access saved jobs, track applications, and pick up where you left off.</p>
            </div>

            <form asp-action="Login" method="post" class="mt-8 space-y-6">
                <div asp-validation-summary="ModelOnly" class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600" role="alert"></div>

                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="space-y-4">
                    <div>
                        <label asp-for="UserNameOrEmail" class="sr-only"></label>
                        <input asp-for="UserNameOrEmail" class="form-input relative block w-full appearance-none rounded-lg border border-background-dark/20 bg-background-light px-3 py-3 text-background-dark placeholder-background-dark/60 focus:z-10 focus:border-primary focus:outline-none focus:ring-primary dark:border-background-light/15 dark:bg-background-dark dark:text-background-light dark:placeholder-background-light/60" autocomplete="username" placeholder="Email or username" />
                        <span asp-validation-for="UserNameOrEmail" class="mt-1 block text-sm text-red-500"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="sr-only"></label>
                        <input asp-for="Password" class="form-input relative block w-full appearance-none rounded-lg border border-background-dark/20 bg-background-light px-3 py-3 text-background-dark placeholder-background-dark/60 focus:z-10 focus:border-primary focus:outline-none focus:ring-primary dark:border-background-light/15 dark:bg-background-dark dark:text-background-light dark:placeholder-background-light/60" autocomplete="current-password" placeholder="Password" />
                        <span asp-validation-for="Password" class="mt-1 block text-sm text-red-500"></span>
                    </div>
                </div>

                <div class="flex items-center justify-between text-sm">
                    <label class="flex items-center gap-2 text-background-dark/80 dark:text-background-light/80">
                        <input asp-for="RememberMe" class="rounded border-background-dark/20 text-primary focus:ring-primary dark:border-background-light/20" />
                        <span>Remember me</span>
                    </label>
                    <a asp-controller="Contact" asp-action="Index" class="font-medium text-primary hover:text-primary/80">Forgot password?</a>
                </div>

                <button type="submit" class="group relative flex w-full justify-center rounded-lg border border-transparent bg-primary px-4 py-3 text-sm font-semibold text-white transition hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">Sign in</button>

                <p class="text-center text-sm text-background-dark/70 dark:text-background-light/70">
                    New to CareerConnect?
                    <a asp-action="Register" class="font-medium text-primary hover:text-primary/80">Join now</a>
                </p>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
