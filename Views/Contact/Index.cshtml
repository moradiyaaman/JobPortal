@model ContactMessage
@{
    ViewData["Title"] = "Contact";
}
<section class="space-y-3">
    <h1 class="text-3xl font-semibold text-slate-900">We'd love to hear from you</h1>
    <p class="text-sm text-slate-500">Ask a question, share feedback, or request help. Our team will respond soon.</p>
</section>

@if (ViewData["Success"] != null)
{
    <div class="mt-6 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-600">@ViewData["Success"]</div>
}

<form asp-action="Index" method="post" class="card mt-8 space-y-6 p-8">
    <div asp-validation-summary="ModelOnly" class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600" role="alert"></div>

    <div class="input-group">
        <label asp-for="Name" class="text-sm font-medium text-slate-600"></label>
        <input asp-for="Name" class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
        <span asp-validation-for="Name" class="text-sm text-red-500"></span>
    </div>
    <div class="input-group">
        <label asp-for="Email" class="text-sm font-medium text-slate-600"></label>
        <input asp-for="Email" class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
        <span asp-validation-for="Email" class="text-sm text-red-500"></span>
    </div>
    <div class="input-group">
        <label asp-for="Subject" class="text-sm font-medium text-slate-600"></label>
        <input asp-for="Subject" class="w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
        <span asp-validation-for="Subject" class="text-sm text-red-500"></span>
    </div>
    <div class="input-group">
        <label asp-for="Message" class="text-sm font-medium text-slate-600"></label>
        <textarea asp-for="Message" rows="5" class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
        <span asp-validation-for="Message" class="text-sm text-red-500"></span>
    </div>

    <button type="submit" class="btn btn-primary w-full sm:w-auto">Send message</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
