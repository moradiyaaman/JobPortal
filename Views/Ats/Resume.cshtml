@model JobPortal.Services.AtsResult
@{
    ViewData["Title"] = "Resume strength";
}
<section class="space-y-4">
    <h1 class="text-3xl font-semibold text-slate-900">Resume strength</h1>
    <div class="card p-6 space-y-4">
        <div class="text-4xl font-bold">@Model.Score/100</div>
        @if (Model.MissingKeywords?.Length > 0)
        {
            <div>
                <p class="text-sm font-semibold text-slate-700">Missing sections/keywords</p>
                <p class="text-sm text-slate-600">@string.Join(", ", Model.MissingKeywords)</p>
            </div>
        }
        @if (Model.Suggestions?.Length > 0)
        {
            <div>
                <p class="text-sm font-semibold text-slate-700">Suggestions</p>
                <ul class="list-disc pl-6 text-sm text-slate-600">
                    @foreach (var s in Model.Suggestions) { <li>@s</li> }
                </ul>
            </div>
        }
        <div class="pt-2">
            <a asp-controller="Account" asp-action="Profile" class="btn btn-secondary">Update resume</a>
        </div>
    </div>
</section>
