@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="mx-auto flex w-full max-w-3xl flex-col items-center gap-6 text-center">
    <div class="card w-full space-y-4 p-10">
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-red-100">
            <svg class="h-8 w-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v4m0 4h.01M3.1 17.25 10.2 4.5a2.25 2.25 0 013.6 0l7.1 12.75A2.25 2.25 0 0118.6 21H5.4a2.25 2.25 0 01-2.3-3.75Z" />
            </svg>
        </div>
        <h1 class="text-3xl font-semibold text-slate-900">Something went wrong</h1>
        <p class="text-sm text-slate-500">An error occurred while processing your request. Our team has been notified.</p>
        @if (Model.ShowRequestId)
        {
            <p class="text-xs text-slate-400">Request ID: <span class="font-mono">@Model.RequestId</span></p>
        }
        <div class="mt-2 space-y-3 rounded-2xl bg-slate-50 p-6 text-left text-sm text-slate-600">
            <h3 class="text-sm font-semibold text-slate-700">Development mode</h3>
            <p>Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.</p>
            <p><strong>The Development environment shouldn't be enabled for deployed applications.</strong> It can result in displaying sensitive information from exceptions to end users. For local debugging, enable the <strong>ASPNETCORE_ENVIRONMENT</strong> variable to <strong>Development</strong> and restart the app.</p>
        </div>
        <div class="pt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to safety</a>
        </div>
    </div>
</section>
