<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] · Online Job Portal</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="layout">
    <header class="site-header">
        <div class="site-header__inner">
            <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">JobPortal</a>
            <nav class="primary-nav">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="primary-nav__link">Home</a>
                <a asp-area="" asp-controller="Jobs" asp-action="Index" class="primary-nav__link">Jobs</a>
                <a asp-area="" asp-controller="Contact" asp-action="Index" class="primary-nav__link">Contact</a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-area="" asp-controller="Jobs" asp-action="MyApplications" class="primary-nav__link">My applications</a>
                    <a asp-area="" asp-controller="Account" asp-action="Profile" class="primary-nav__link">Profile</a>
                    @if (User.IsInRole("Provider"))
                    {
                        <a asp-area="Provider" asp-controller="Dashboard" asp-action="Index" class="primary-nav__link">Provider hub</a>
                    }
                }
            </nav>
            <div class="site-header__actions">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Provider"))
                    {
                        <a asp-area="Provider" asp-controller="Jobs" asp-action="Create" class="btn btn-outline">Post a job</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline">Admin</a>
                    }
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-primary">Sign out</button>
                    </form>
                }
                else
                {
                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline">Sign in</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary">Create account</a>
                }
            </div>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="site-footer__inner">
            <div>
                <strong>JobPortal</strong>
                <p class="text-muted">Connecting talent with opportunity.</p>
            </div>
            <div class="site-footer__links">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a asp-area="" asp-controller="Contact" asp-action="Index">Support</a>
            </div>
            <div class="text-muted">&copy; @DateTime.UtcNow.Year JobPortal</div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
