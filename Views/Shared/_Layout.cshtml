<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] · JobPortal</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: "#1173d4",
                            50: "#e8f2fd",
                            100: "#d3e6fb",
                            500: "#1173d4",
                            600: "#0f66bf",
                            700: "#0c57a5"
                        },
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                        "surface-light": "#ffffff",
                        "surface-dark": "#1f2937",
                        "content-light": "#1f2937",
                        "content-dark": "#d1d5db",
                        "subtle-light": "#6b7280",
                        "subtle-dark": "#9ca3af",
                        "border-light": "#e5e7eb",
                        "border-dark": "#374151"
                    },
                    fontFamily: {
                        display: ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "0.5rem",
                        lg: "0.75rem",
                        xl: "1rem",
                        full: "9999px"
                    }
                }
            }
        };
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" />
    <style type="text/tailwindcss">
        @@layer base {
            body {
                @@apply bg-background-light text-content-light antialiased;
            }
        }

        @@layer components {
            .btn {
                @@apply inline-flex items-center justify-center gap-2 rounded-full px-5 py-2 text-sm font-semibold transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary disabled:pointer-events-none disabled:opacity-50;
            }

            .btn-primary {
                @@apply bg-primary text-white shadow-sm hover:bg-primary/90;
            }

            .btn-secondary {
                @@apply border border-border-light bg-white text-content-light hover:bg-background-light;
            }

            .btn-ghost {
                @@apply text-subtle-light hover:text-content-light hover:bg-background-light;
            }

            .surface-card {
                @@apply rounded-xl border border-border-light bg-surface-light shadow-sm;
            }

            .card {
                @@apply rounded-2xl bg-white shadow-sm ring-1 ring-border-light;
            }

            .pill {
                @@apply inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary;
            }
        }

        .material-symbols-outlined {
            font-variation-settings:
                'FILL' 0,
                'wght' 400,
                'GRAD' 0,
                'opsz' 24;
        }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-background-light font-display text-content-light dark:bg-background-dark dark:text-content-dark">
    <div class="flex min-h-screen flex-col">
        <header class="sticky top-0 z-20 border-b border-border-light bg-surface-light/95 backdrop-blur dark:border-border-dark dark:bg-surface-dark/95">
            <div class="mx-auto flex h-16 w-full max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
                <div class="flex items-center gap-8">
                    <a class="flex items-center gap-2 text-lg font-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="material-symbols-outlined text-primary">blur_circular</span>
                        <span>JobPortal</span>
                    </a>
                    <nav class="hidden items-center gap-6 md:flex">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-sm font-semibold transition @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "text-primary" : "text-subtle-light hover:text-primary")">Home</a>
                        <a asp-area="" asp-controller="Jobs" asp-action="Index" class="text-sm font-semibold transition @(ViewContext.RouteData.Values["controller"]?.ToString() == "Jobs" ? "text-primary" : "text-subtle-light hover:text-primary")">Jobs</a>
                        <a asp-area="" asp-controller="Contact" asp-action="Index" class="text-sm font-semibold transition @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "text-primary" : "text-subtle-light hover:text-primary")">Contact</a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-area="" asp-controller="Jobs" asp-action="MyApplications" class="text-sm font-semibold text-subtle-light transition hover:text-primary">My applications</a>
                            <a asp-area="" asp-controller="Account" asp-action="Profile" class="text-sm font-semibold text-subtle-light transition hover:text-primary">Profile</a>
                            <a asp-area="" asp-controller="Ats" asp-action="Resume" class="text-sm font-semibold text-subtle-light transition hover:text-primary">Resume score</a>
                            @if (User.IsInRole("Provider"))
                            {
                                <a asp-area="Provider" asp-controller="Dashboard" asp-action="Index" class="text-sm font-semibold text-subtle-light transition hover:text-primary">Provider hub</a>
                            }
                        }
                    </nav>
                </div>
                <div class="flex items-center gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Provider"))
                        {
                            <a asp-area="Provider" asp-controller="Jobs" asp-action="Create" class="hidden btn btn-secondary lg:inline-flex">Post a job</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="hidden btn btn-secondary lg:inline-flex">Admin</a>
                        }
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="inline-flex">
                            <button type="submit" class="btn btn-primary">Sign out</button>
                        </form>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-secondary">Sign in</a>
                        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary">Create account</a>
                    }
                </div>
            </div>
        </header>

        <main class="flex-1">
            <div class="mx-auto w-full max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
                @RenderBody()
            </div>
        </main>

        <footer class="border-t border-border-light bg-surface-light py-8 dark:border-border-dark dark:bg-surface-dark">
            <div class="mx-auto flex w-full max-w-7xl flex-col gap-6 px-4 text-sm text-subtle-light sm:flex-row sm:items-center sm:justify-between sm:px-6 lg:px-8 dark:text-subtle-dark">
                <div>
                    <p class="text-base font-semibold text-content-light dark:text-content-dark">JobPortal</p>
                    <p>Connecting talent with opportunity.</p>
                </div>
                <div class="flex items-center gap-4">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="transition hover:text-primary">Privacy</a>
                    <a asp-area="" asp-controller="Contact" asp-action="Index" class="transition hover:text-primary">Support</a>
                </div>
                <p>&copy; @DateTime.UtcNow.Year JobPortal. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
