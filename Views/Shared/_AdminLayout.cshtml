@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · Admin · Online Job Portal</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eef2ff',
                            100: '#e0e7ff',
                            500: '#4f46e5',
                            600: '#4338ca',
                            700: '#3730a3'
                        },
                        slate: tailwind.colors.slate
                    },
                    fontFamily: {
                        sans: ['Inter', 'ui-sans-serif', 'system-ui']
                    }
                }
            }
        };
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <style type="text/tailwindcss">
        @@layer base {
            body {
                @@apply bg-slate-50 text-slate-900 antialiased;
            }
        }

        @@layer components {
            .btn {
                @@apply inline-flex items-center justify-center rounded-lg text-sm font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary-500 disabled:opacity-50 disabled:pointer-events-none;
            }

            .btn-primary {
                @@apply bg-primary-600 text-white hover:bg-primary-700 shadow-sm;
            }

            .btn-secondary {
                @@apply bg-white text-slate-900 border border-slate-200 hover:bg-slate-100;
            }

            .sidebar-link {
                @@apply flex items-center gap-3 rounded-xl px-3 py-2 text-sm font-medium text-slate-500 transition hover:text-slate-900 hover:bg-white/80;
            }

            .sidebar-link-active {
                @@apply bg-white text-slate-900 shadow-sm;
            }

            .card {
                @@apply rounded-2xl bg-white shadow-sm ring-1 ring-slate-200/60;
            }
        }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="flex min-h-screen">
    <aside class="hidden w-72 flex-shrink-0 border-r border-slate-200 bg-white/90 px-6 py-8 backdrop-blur lg:flex">
        <div class="flex w-full flex-col gap-8">
            <div>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-xl font-semibold text-slate-900">JobPortal Admin</a>
                <p class="mt-1 text-sm text-slate-500">Operate and monitor the marketplace.</p>
            </div>
            <nav class="flex flex-col gap-1">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "sidebar-link-active" : string.Empty)">Dashboard</a>
                <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Jobs" ? "sidebar-link-active" : string.Empty)">Jobs</a>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "sidebar-link-active" : string.Empty)">Users</a>
                <a asp-area="Admin" asp-controller="Applications" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Applications" ? "sidebar-link-active" : string.Empty)">Applications</a>
                <a asp-area="Admin" asp-controller="Messages" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "sidebar-link-active" : string.Empty)">Messages</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link">Public site</a>
            </nav>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="mt-auto">
                <button type="submit" class="btn btn-secondary w-full">Sign out</button>
            </form>
        </div>
    </aside>
    <main class="flex-1">
        <header class="border-b border-slate-200 bg-white/80 backdrop-blur">
            <div class="mx-auto flex w-full max-w-6xl flex-col gap-2 px-5 py-6 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <p class="text-xs uppercase tracking-wide text-slate-400">Admin area</p>
                    <h1 class="text-2xl font-semibold text-slate-900">@title</h1>
                </div>
                <div class="flex items-center gap-3 text-sm text-slate-500">
                    <span>@User.Identity?.Name</span>
                    <span class="hidden h-1 w-1 rounded-full bg-slate-300 sm:inline-flex"></span>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">View site</a>
                </div>
            </div>
        </header>
        <div class="mx-auto w-full max-w-6xl px-5 py-8 lg:px-10">
            @RenderBody()
        </div>
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
