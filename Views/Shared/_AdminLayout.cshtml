@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · Admin · Online Job Portal</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: "#1173d4",
                            50: "#e8f2fd",
                            100: "#d3e6fb",
                            500: "#1173d4",
                            600: "#0f66bf",
                            700: "#0c57a5"
                        },
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                        "surface-light": "#ffffff",
                        "surface-dark": "#1f2937",
                        "content-light": "#1f2937",
                        "content-dark": "#d1d5db",
                        "subtle-light": "#6b7280",
                        "subtle-dark": "#9ca3af",
                        "border-light": "#e5e7eb",
                        "border-dark": "#374151"
                    },
                    fontFamily: {
                        sans: ['Inter', 'ui-sans-serif', 'system-ui'],
                        display: ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        DEFAULT: "0.5rem",
                        lg: "0.75rem",
                        xl: "1rem",
                        full: "9999px"
                    }
                }
            }
        };
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <style type="text/tailwindcss">
        @@layer base {
            body {
                @@apply bg-background-light text-content-light antialiased;
            }
        }

        @@layer components {
            .btn {
                @@apply inline-flex items-center justify-center gap-2 rounded-full px-5 py-2 text-sm font-semibold transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary disabled:pointer-events-none disabled:opacity-50;
            }

            .btn-primary {
                @@apply bg-primary text-white shadow-sm hover:bg-primary/90;
            }

            .btn-secondary {
                @@apply border border-border-light bg-white text-content-light hover:bg-background-light;
            }

            .btn-ghost {
                @@apply text-subtle-light hover:text-content-light hover:bg-background-light;
            }

            .surface-card {
                @@apply rounded-xl border border-border-light bg-surface-light shadow-sm;
            }

            .card {
                @@apply rounded-2xl bg-white shadow-sm ring-1 ring-border-light;
            }

            .pill {
                @@apply inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary;
            }

            .sidebar-link {
                @@apply flex items-center gap-3 rounded-xl px-3 py-2 text-sm font-medium text-subtle-light transition hover:text-content-light hover:bg-white/80;
            }

            .sidebar-link-active {
                @@apply bg-white text-content-light shadow-sm;
            }
        }
    </style>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="flex min-h-screen">
    <aside class="hidden w-72 flex-shrink-0 border-r border-border-light bg-surface-light/90 px-6 py-8 backdrop-blur lg:flex">
        <div class="flex w-full flex-col gap-8">
            <div>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-xl font-semibold text-content-light">JobPortal Admin</a>
                <p class="mt-1 text-sm text-subtle-light">Operate and monitor the marketplace.</p>
            </div>
            <nav class="flex flex-col gap-1">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "sidebar-link-active" : string.Empty)">Dashboard</a>
                <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Jobs" ? "sidebar-link-active" : string.Empty)">Jobs</a>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "sidebar-link-active" : string.Empty)">Users</a>
                <a asp-area="Admin" asp-controller="Applications" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Applications" ? "sidebar-link-active" : string.Empty)">Applications</a>
                <a asp-area="Admin" asp-controller="Messages" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Messages" ? "sidebar-link-active" : string.Empty)">Messages</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link">Public site</a>
            </nav>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="mt-auto">
                <button type="submit" class="btn btn-secondary w-full">Sign out</button>
            </form>
        </div>
    </aside>
    <main class="flex-1">
        <header class="border-b border-border-light bg-surface-light/80 backdrop-blur">
            <div class="mx-auto flex w-full max-w-6xl flex-col gap-2 px-5 py-6 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <p class="text-xs uppercase tracking-wide text-subtle-light">Admin area</p>
                    <h1 class="text-2xl font-semibold text-content-light">@title</h1>
                </div>
                <div class="flex items-center gap-3 text-sm text-subtle-light">
                    <span>@User.Identity?.Name</span>
                    <span class="hidden h-1 w-1 rounded-full bg-border-light sm:inline-flex"></span>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">View site</a>
                </div>
            </div>
        </header>
        <div class="mx-auto w-full max-w-6xl px-5 py-8 lg:px-10">
            @RenderBody()
        </div>
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
