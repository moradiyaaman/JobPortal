@model ProviderJobFormViewModel
@{
    ViewData["Title"] = "Post a job";
}
<section class="job-form">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <a asp-area="Provider" asp-controller="Jobs" asp-action="Index" class="btn btn-outline-secondary">Back to jobs</a>
    </div>

    <form asp-area="Provider" asp-controller="Jobs" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        @Html.Partial("_JobForm", Model)
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Publish job</button>
            <a asp-area="Provider" asp-controller="Jobs" asp-action="Index" class="btn btn-link">Cancel</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
