@model ProviderJobFormViewModel
@{
    ViewData["Title"] = "Edit Job";
}
<div class="flex flex-col min-h-screen">
    <main class="flex-grow">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="max-w-5xl mx-auto bg-background-light dark:bg-background-dark/50 p-6 sm:p-8 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
                <div class="mb-6 sm:mb-8 flex items-center justify-between">
                    <div>
                        <h2 class="text-3xl font-bold text-gray-900 dark:text-white">@ViewData["Title"]</h2>
                        <p class="mt-1 text-gray-600 dark:text-gray-400">Update details and manage visibility</p>
                    </div>
                    <a asp-area="Provider" asp-controller="Jobs" asp-action="Index" class="rounded-lg border border-gray-300 dark:border-gray-600 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200">Back to jobs</a>
                </div>

                <form asp-area="Provider" asp-controller="Jobs" asp-action="Edit" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600" role="alert"></div>

                    @Html.Partial("_JobForm", Model)

                    <div class="flex justify-end gap-3 pt-4">
                        <a asp-area="Provider" asp-controller="Jobs" asp-action="Index" class="rounded-lg border border-gray-300 dark:border-gray-600 px-5 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-200">Cancel</a>
                        <button type="submit" class="bg-primary hover:bg-primary/90 text-white font-bold py-2.5 px-6 rounded-lg shadow-sm transition">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
