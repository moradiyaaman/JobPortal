@model IEnumerable<ProviderJobListItemViewModel>
@{
    ViewData["Title"] = "My job postings";
}
<section class="jobs-index">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Manage the roles posted by @ViewBag.CompanyName.</p>
        </div>
        <a asp-area="Provider" asp-controller="Jobs" asp-action="Create" class="btn btn-primary">Post a job</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Posted</th>
                        <th>Status</th>
                        <th>Applications</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var job in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@job.Title</strong>
                                </td>
                                <td>@job.PostedAt.ToLocalTime():d</td>
                                <td>
                                    <span class="badge @(job.IsActive ? "badge-success" : "badge-secondary")">@(job.IsActive ? "Active" : "Paused")</span>
                                </td>
                                <td>@job.ApplicationCount</td>
                                <td class="text-right">
                                    <a asp-area="Provider" asp-controller="Jobs" asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <form asp-area="Provider" asp-controller="Jobs" asp-action="ToggleStatus" asp-route-id="@job.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-warning">@(job.IsActive ? "Pause" : "Activate")</button>
                                    </form>
                                    <form asp-area="Provider" asp-controller="Jobs" asp-action="Delete" asp-route-id="@job.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this job?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">You have not posted any jobs yet.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
