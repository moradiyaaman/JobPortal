@using System.Linq
@model ProviderJobApplicationsViewModel
@{
    ViewData["Title"] = "Applicants";
    var statusOptions = ViewBag.StatusOptions as string[] ?? System.Array.Empty<string>();
    var sortOrder = string.Equals(Model.SortOrder, "date", System.StringComparison.OrdinalIgnoreCase) ? "date" : "rank";
    var rankedByAts = sortOrder != "date";
}
<div class="flex flex-col min-h-screen">
    <main class="flex-1 px-4 py-8 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-5xl">
            <div class="mb-4 flex items-start justify-between">
                <div>
                    <h1 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white">Applicants for @Model.JobTitle</h1>
                    <p class="mt-1 text-sm text-slate-600 dark:text-slate-400">Review and manage candidates for this role.</p>
                    <p class="mt-2 text-xs text-slate-500">
                        @if (rankedByAts)
                        {
                            <text>Sorted by ATS relevance. Toggle to view by applied date.</text>
                        }
                        else
                        {
                            <text>Sorted by newest applications. Toggle to view ATS ranking.</text>
                        }
                    </p>
                </div>
                <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:gap-4">
                    <div class="flex items-center gap-2 rounded-full border border-slate-200 bg-white px-2 py-1 text-xs font-medium text-slate-600 shadow-sm dark:border-slate-700 dark:bg-slate-900 dark:text-slate-300">
                        <span class="uppercase tracking-wide text-slate-400">Sort</span>
                        <a asp-action="Applications" asp-route-id="@Model.JobId" asp-route-sort="rank" class="rounded-full px-3 py-1 @(rankedByAts ? "bg-primary text-white" : "text-slate-600 hover:text-primary")">ATS rank</a>
                        <a asp-action="Applications" asp-route-id="@Model.JobId" asp-route-sort="date" class="rounded-full px-3 py-1 @(!rankedByAts ? "bg-primary text-white" : "text-slate-600 hover:text-primary")">Applied date</a>
                    </div>
                    <a asp-action="Index" class="rounded-lg border border-slate-300 px-4 py-2 text-sm text-slate-700 dark:text-slate-200">Back to jobs</a>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="mb-6 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="mb-6 rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-600">@TempData["Success"]</div>
            }

            @if (!(Model.Applications?.Any() ?? false))
            {
                <div class="rounded-xl border border-dashed border-slate-200 px-6 py-12 text-center text-slate-500">
                    <h3 class="text-lg font-semibold text-slate-700">No applicants yet</h3>
                    <p class="mt-1 text-sm">Share the role to attract candidates.</p>
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 gap-6">
                    @foreach (var applicant in Model.Applications)
                    {
                        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-6 rounded-xl border border-black/10 dark:border-white/10 bg-white/70 dark:bg-black/10 p-6 shadow-sm">
                            <div class="flex-1 min-w-0">
                                <h3 class="text-lg font-semibold text-slate-900 dark:text-white">@applicant.ApplicantName</h3>
                                <p class="mt-1 text-sm text-slate-600 dark:text-slate-400">Applied @applicant.AppliedAt.ToLocalTime().ToString("yyyy-MM-dd") &bull; @applicant.ApplicantEmail</p>
                                @if (Model.HasAtsData && applicant.AtsScore.HasValue)
                                {
                                    <div class="mt-3 rounded-lg border border-slate-200 bg-white/80 p-3 text-xs text-slate-600 dark:border-slate-700 dark:bg-slate-900/50 dark:text-slate-300">
                                        <div class="flex items-center justify-between">
                                            <span class="font-semibold text-slate-700 dark:text-slate-200">ATS score</span>
                                            <span class="text-sm font-semibold text-primary">@applicant.AtsScore.Value</span>
                                        </div>
                                        @if (applicant.AtsMatchedKeywords?.Any() == true)
                                        {
                                            <p class="mt-2"><span class="font-semibold text-slate-700 dark:text-slate-100">Matches:</span> @string.Join(", ", applicant.AtsMatchedKeywords.Take(5))</p>
                                        }
                                        @if (applicant.AtsMissingKeywords?.Any() == true)
                                        {
                                            <p class="mt-1 text-slate-500 dark:text-slate-400"><span class="font-semibold text-slate-700 dark:text-slate-100">Missing:</span> @string.Join(", ", applicant.AtsMissingKeywords.Take(5))</p>
                                        }
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(applicant.CoverLetter))
                                {
                                    <div class="mt-4 rounded-lg border border-slate-200 bg-white/80 p-4 text-sm text-slate-700 dark:text-slate-300">
                                        <p class="font-medium text-slate-600">Cover letter</p>
                                        <p class="mt-2 whitespace-pre-line">@applicant.CoverLetter</p>
                                    </div>
                                }
                            </div>
                            <div class="w-full sm:w-auto flex flex-col sm:flex-row gap-3">
                                @if (!string.IsNullOrWhiteSpace(applicant.ResumeUrl))
                                {
                                    <a href="@applicant.ResumeUrl" target="_blank" class="flex items-center justify-center rounded-lg bg-slate-200 px-4 py-2 text-sm font-medium text-slate-700 transition-colors hover:bg-slate-300 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600">Resume</a>
                                }
                                <form asp-action="UpdateApplicationStatus" method="post" class="flex items-center gap-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@applicant.ApplicationId" />
                                    <input type="hidden" name="sort" value="@sortOrder" />
                                    <select name="status" class="rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm dark:bg-slate-900 dark:text-slate-200">
                                        @foreach (var status in statusOptions)
                                        {
                                            <option value="@status" selected="@(status == applicant.Status ? "selected" : null)">@status</option>
                                        }
                                    </select>
                                    <button type="submit" class="rounded-lg bg-primary px-4 py-2 text-sm font-medium text-white shadow-sm transition-colors hover:bg-primary/80">Save</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </main>
</div>
