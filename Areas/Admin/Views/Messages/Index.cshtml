@model IEnumerable<JobPortal.Models.ContactMessage>
@{
    ViewData["Title"] = "Contact messages";
}
<section class="page-header">
    <div>
        <h1>Contact messages</h1>
        <p class="text-muted">Review inquiries and provide timely support.</p>
    </div>
</section>

<table class="table table--responsive">
    <thead>
        <tr>
            <th>Received</th>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var message in Model)
    {
        <tr>
            <td data-label="Received">@message.CreatedAt.ToString("MMM d, yyyy")</td>
            <td data-label="Name">@message.Name</td>
            <td data-label="Email">@message.Email</td>
            <td data-label="Subject">@message.Subject</td>
            <td data-label="Message" class="message-cell">@message.Message</td>
        </tr>
    }
    </tbody>
</table>
