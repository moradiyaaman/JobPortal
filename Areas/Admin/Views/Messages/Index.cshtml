@model IEnumerable<JobPortal.Models.ContactMessage>
@{
    ViewData["Title"] = "Contact messages";
}
<section class="space-y-6">
    <header class="space-y-1">
        <h1 class="text-3xl font-semibold text-content-light">Contact messages</h1>
        <p class="text-sm text-subtle-light">Review inquiries and provide timely support.</p>
    </header>

    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-border-light text-left text-sm">
                <thead class="bg-background-light text-xs font-semibold uppercase tracking-wide text-subtle-light">
                    <tr>
                        <th class="px-6 py-3">Received</th>
                        <th class="px-6 py-3">Name</th>
                        <th class="px-6 py-3">Preferred Date</th>
                        <th class="px-6 py-3">Email</th>
                        <th class="px-6 py-3">Subject</th>
                        <th class="px-6 py-3">Message</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-light text-subtle-light">
                    @foreach (var message in Model)
                    {
                        <tr class="transition hover:bg-background-light/60">
                            <td class="px-6 py-4 text-sm">@message.CreatedAt.ToString("MMM d, yyyy")</td>
                            <td class="px-6 py-4 font-medium text-content-light">@message.Name</td>
                            <td class="px-6 py-4 text-sm">@(message.PreferredContactDate?.ToString("MMM d, yyyy") ?? "â€”")</td>
                            <td class="px-6 py-4">
                                <a href="mailto:@message.Email" class="text-primary hover:text-primary-700">@message.Email</a>
                            </td>
                            <td class="px-6 py-4">@message.Subject</td>
                            <td class="px-6 py-4 text-sm">@message.Message</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
