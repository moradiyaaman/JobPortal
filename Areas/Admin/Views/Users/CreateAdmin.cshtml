@model AdminCreateAdminViewModel
@{
    ViewData["Title"] = "Add administrator";
}
<section class="space-y-6">
    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary w-fit">‚Üê Back to users</a>
    <div class="card space-y-6 p-10">
        <div>
            <h1 class="text-2xl font-semibold text-content-light">Create administrator account</h1>
            <p class="text-sm text-subtle-light">Grant elevated access to teammates who help run the marketplace.</p>
        </div>
        <form asp-area="Admin" asp-controller="Users" asp-action="CreateAdmin" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>

            <div class="grid gap-6 md:grid-cols-2">
                <div class="space-y-2">
                    <label asp-for="UserName" class="text-sm font-medium text-content-light"></label>
                    <input asp-for="UserName" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                    <span asp-validation-for="UserName" class="text-sm text-red-500"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="FullName" class="text-sm font-medium text-content-light"></label>
                    <input asp-for="FullName" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                    <span asp-validation-for="FullName" class="text-sm text-red-500"></span>
                </div>
                <div class="space-y-2 md:col-span-2">
                    <label asp-for="Email" class="text-sm font-medium text-content-light"></label>
                    <input asp-for="Email" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                    <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="Password" class="text-sm font-medium text-content-light"></label>
                    <input asp-for="Password" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                    <span asp-validation-for="Password" class="text-sm text-red-500"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="text-sm font-medium text-content-light"></label>
                    <input asp-for="ConfirmPassword" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div class="flex flex-col gap-3 pt-2 sm:flex-row sm:items-center">
                <button type="submit" class="btn btn-primary">Create admin</button>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
