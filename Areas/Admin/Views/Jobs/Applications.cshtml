@model JobPortal.Models.Job
@{
    ViewData["Title"] = "Applications";
}
<section class="flex flex-wrap items-center justify-between gap-4">
    <div>
        <h1 class="text-2xl font-semibold text-content-light">@Model.Title</h1>
        <p class="text-sm text-subtle-light">@Model.CompanyName · @Model.Location</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">← Back to jobs</a>
</section>

@if (!(Model.Applications?.Any() ?? false))
{
    <div class="card mt-8 space-y-4 p-10 text-center text-subtle-light">
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-background-light text-subtle-light">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-7 w-7"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5.5 21h13a1.5 1.5 0 0 0 1.5-1.5v-9.586a1.5 1.5 0 0 0-.44-1.06l-4.914-4.914A1.5 1.5 0 0 0 13.586 3H5.5A1.5 1.5 0 0 0 4 4.5v15A1.5 1.5 0 0 0 5.5 21Z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v4.5a1.5 1.5 0 0 0 1.5 1.5H15"/></svg>
        </div>
        <h3 class="text-lg font-semibold text-content-light">No applicants yet</h3>
        <p class="text-sm">Share this listing to attract more candidates.</p>
    </div>
}
else
{
    <div class="card mt-8 overflow-hidden">
        <div class="flex items-center justify-between border-b border-border-light bg-surface-light/60 px-6 py-5">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-subtle-light">Applicants (@Model.Applications?.Count ?? 0)</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-border-light text-left text-sm">
                <thead class="bg-background-light text-xs font-semibold uppercase tracking-wide text-subtle-light">
                    <tr>
                        <th class="px-6 py-3">Applicant</th>
                        <th class="px-6 py-3">Email</th>
                        <th class="px-6 py-3">Applied</th>
                        <th class="px-6 py-3">Status</th>
                        <th class="px-6 py-3">Resume</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-light text-subtle-light">
                @foreach (var application in Model.Applications.OrderByDescending(a => a.AppliedAt))
                {
                    <tr class="transition hover:bg-background-light/60">
                        <td class="px-6 py-4 font-medium text-content-light">@(application.Applicant?.FullName ?? application.Applicant?.UserName)</td>
                        <td class="px-6 py-4">@application.Applicant?.Email</td>
                        <td class="px-6 py-4">@application.AppliedAt.ToString("MMM d, yyyy")</td>
                        <td class="px-6 py-4"><span class="pill bg-primary-50 text-primary-600">@application.Status</span></td>
                        <td class="px-6 py-4">
                            @if (!string.IsNullOrEmpty(application.Applicant?.ResumeFileName))
                            {
                                <a href="@application.Applicant.ResumeFileName" target="_blank" class="btn btn-secondary">Download</a>
                            }
                            else
                            {
                                <span class="text-subtle-light opacity-70">Not uploaded</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
