@model JobPortal.Models.Job
@{
    ViewData["Title"] = "Edit job";
}
<section class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
        <h1 class="text-3xl font-semibold text-content-light">Edit job</h1>
        <p class="text-sm text-subtle-light">Update job details and manage visibility.</p>
    </div>
</section>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card mt-8 space-y-8 p-10">
    <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>
    <input type="hidden" asp-for="Id" />

    <div class="grid gap-6 lg:grid-cols-2">
        <div class="input-group">
            <label asp-for="Title" class="text-sm font-medium text-content-light"></label>
            <input asp-for="Title" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            <span asp-validation-for="Title" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="JobType" class="text-sm font-medium text-content-light"></label>
            <input asp-for="JobType" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            <span asp-validation-for="JobType" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="CompanyName" class="text-sm font-medium text-content-light"></label>
            <input asp-for="CompanyName" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            <span asp-validation-for="CompanyName" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="CompanyWebsite" class="text-sm font-medium text-content-light"></label>
            <input asp-for="CompanyWebsite" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            <span asp-validation-for="CompanyWebsite" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="Location" class="text-sm font-medium text-content-light"></label>
            <input asp-for="Location" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            <span asp-validation-for="Location" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="Country" class="text-sm font-medium text-content-light"></label>
            <input asp-for="Country" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
            <span asp-validation-for="Country" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="Salary" class="text-sm font-medium text-content-light"></label>
            <input asp-for="Salary" class="w-full rounded-xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500" />
        </div>
        <div class="input-group">
            <label class="text-sm font-medium text-content-light">Company logo</label>
            <input type="file" name="companyLogo" class="w-full rounded-xl border border-dashed border-border-light bg-white px-4 py-3 text-sm focus:border-primary-500 focus:ring-primary-500" />
            @if (!string.IsNullOrEmpty(Model.CompanyLogoPath))
            {
                <p class="mt-2 text-xs text-subtle-light">Current logo:<br /><img src="@Model.CompanyLogoPath" alt="@Model.CompanyName logo" class="mt-2 h-12 w-12 rounded-full border border-border-light object-cover" /></p>
            }
        </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
        <div class="input-group lg:col-span-2">
            <label asp-for="Description" class="text-sm font-medium text-content-light"></label>
            <textarea asp-for="Description" rows="6" class="w-full rounded-2xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
            <span asp-validation-for="Description" class="text-sm text-red-500"></span>
        </div>
        <div class="input-group">
            <label asp-for="Qualifications" class="text-sm font-medium text-content-light"></label>
            <textarea asp-for="Qualifications" rows="4" class="w-full rounded-2xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
        </div>
        <div class="input-group">
            <label asp-for="Experience" class="text-sm font-medium text-content-light"></label>
            <textarea asp-for="Experience" rows="4" class="w-full rounded-2xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
        </div>
        <div class="lg:col-span-2 input-group">
            <label asp-for="Skills" class="text-sm font-medium text-content-light"></label>
            <textarea asp-for="Skills" rows="4" class="w-full rounded-2xl border border-border-light bg-white px-4 py-3 text-sm shadow-sm focus:border-primary-500 focus:ring-primary-500"></textarea>
        </div>
    </div>

    <label class="flex items-center gap-3 rounded-xl border border-border-light bg-background-light px-4 py-3 text-sm text-subtle-light">
        <input asp-for="IsActive" class="rounded border-border-light text-primary-600 focus:ring-primary-500" />
        <span>Visible to job seekers</span>
    </label>

    <div class="flex flex-col gap-4 pt-4 sm:flex-row sm:items-center">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
