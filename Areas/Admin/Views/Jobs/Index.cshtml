@model IEnumerable<JobPortal.Models.Job>
@{
    ViewData["Title"] = "Manage jobs";
}
<section class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
        <h1 class="text-3xl font-semibold text-content-light">Job listings</h1>
        <p class="text-sm text-subtle-light">Create, update, and monitor job postings.</p>
    </div>
    @* <a asp-action="Create" class="btn btn-primary">Post new job</a> *@
</section>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-6">@TempData["Success"]</div>
}

<div class="card mt-8 overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-border-light text-left text-sm">
            <thead class="bg-background-light text-xs font-semibold uppercase tracking-wide text-subtle-light">
                <tr>
                    <th class="px-6 py-3">Job</th>
                    <th class="px-6 py-3">Company</th>
                    <th class="px-6 py-3">Location</th>
                    <th class="px-6 py-3">Type</th>
                    <th class="px-6 py-3">Posted</th>
                    <th class="px-6 py-3">Status</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-border-light text-subtle-light">
                @foreach (var job in Model)
                {
                    <tr class="transition hover:bg-background-light/60">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                @if (!string.IsNullOrWhiteSpace(job.CompanyLogoPath))
                                {
                                    <img src="@job.CompanyLogoPath" alt="@job.CompanyName logo" class="h-10 w-10 rounded-full border border-border-light object-cover" />
                                }
                                <div>
                                    <a asp-action="Applications" asp-route-id="@job.Id" class="font-semibold text-content-light hover:underline">@job.Title</a>
                                    <p class="text-xs text-subtle-light opacity-70">#@job.Id</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">@job.CompanyName</td>
                        <td class="px-6 py-4">@job.Location</td>
                        <td class="px-6 py-4">@job.JobType</td>
                        <td class="px-6 py-4">@job.PostedAt.ToString("MMM d, yyyy")</td>
                        <td class="px-6 py-4">
                            <span class="pill @(job.IsActive ? "bg-emerald-50 text-emerald-600" : "bg-border-light text-subtle-light")">@(job.IsActive ? "Active" : "Hidden")</span>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end gap-2">
                                <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-secondary">View</a>
                                <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-secondary">Edit</a>
                                <form asp-action="ToggleStatus" asp-route-id="@job.Id" method="post" class="inline-flex">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-secondary">@(job.IsActive ? "Hide" : "Activate")</button>
                                </form>
                                <form asp-action="Delete" asp-route-id="@job.Id" method="post" onsubmit="return confirm('Delete this job?');" class="inline-flex">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-secondary text-red-500">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
