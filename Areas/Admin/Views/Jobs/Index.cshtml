@model IEnumerable<JobPortal.Models.Job>
@{
    ViewData["Title"] = "Manage jobs";
}
<section class="page-header">
    <div>
        <h1>Job listings</h1>
        <p class="text-muted">Create, update, and monitor job postings.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">Post new job</a>
</section>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table--responsive">
    <thead>
        <tr>
            <th>Logo</th>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Job type</th>
            <th>Posted</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var job in Model)
    {
        <tr>
            <td data-label="Logo">
                @if (!string.IsNullOrWhiteSpace(job.CompanyLogoPath))
                {
                    <img src="@job.CompanyLogoPath" alt="@job.CompanyName logo" class="company-logo" />
                }
            </td>
            <td data-label="Title">
                <a asp-action="Applications" asp-route-id="@job.Id">@job.Title</a>
            </td>
            <td data-label="Company">@job.CompanyName</td>
            <td data-label="Location">@job.Location</td>
            <td data-label="Job type">@job.JobType</td>
            <td data-label="Posted">@job.PostedAt.ToString("MMM d, yyyy")</td>
            <td data-label="Status">
                <span class="status-pill @(job.IsActive ? "" : "status-pill--muted")">@(job.IsActive ? "Active" : "Hidden")</span>
            </td>
            <td class="table__actions">
                <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-link">View</a>
                <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-link">Edit</a>
                <form asp-action="ToggleStatus" asp-route-id="@job.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link">@(job.IsActive ? "Hide" : "Activate")</button>
                </form>
                <form asp-action="Delete" asp-route-id="@job.Id" method="post" onsubmit="return confirm('Delete this job?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
